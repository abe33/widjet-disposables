{
  "name": "widjet-disposables",
  "version": "0.1.7",
  "description": "Lightweight disposable pattern implementation",
  "main": "lib/index.js",
  "jsnext:main": "src/index.es6",
  "scripts": {
    "test": "nyc mocha --recursive --compilers js:babel-register test/**/*.es6 test/*.es6",
    "lcov_report": "nyc report --reporter=lcov",
    "coverage": "npm run lcov_report && codecov",
    "babel": "babel src --out-dir lib",
    "standard": "standard src/*.es6 test/*.es6",
    "esdoc": "esdoc -c esdoc.json",
    "prepublish": "npm run babel",
    "start": "widjet-test-server test/**/*.es6"
  },
  "keywords": [
    "widgets",
    "widget",
    "web",
    "widjet",
    "disposables"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/abe33/widjet-disposables.git"
  },
  "bugs": "http://github.com/abe33/widjet-disposables/issues",
  "commits": "http://github.com/abe33/widjet-disposables/commits",
  "author": "Cédric Néhémie <cedric.nehemie@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babel-plugin-transform-es3-member-expression-literals": "^6.8.0",
    "babel-plugin-transform-es3-property-literals": "^6.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-register": "^6.3.13",
    "codecov": "^1.0.0",
    "esdoc": "^0.4.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.3.4",
    "nyc": "^8.3.0",
    "sinon": "^1.17.4",
    "standard": "^5.4.1",
    "widjet-test-utils": "^1.7.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      ["transform-es2015-modules-commonjs", {"loose": true}],
      ["transform-es2015-classes", {"loose": true}],
      "transform-es3-member-expression-literals",
      "transform-es3-property-literals"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/*.es6"
    ],
    "extension": [
      ".es6"
    ],
    "require": [
      "babel-register"
    ]
  }
}
